# PixEcom Production Environment Configuration
# Copy this to .env and update with your actual values

# Database (PostgreSQL)
POSTGRES_USER=pixecom_prod
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=pixecom_production
DATABASE_URL=postgresql://pixecom_prod:CHANGE_THIS_SECURE_PASSWORD@localhost:5432/pixecom_production

# Redis Cache
REDIS_URL=redis://localhost:6379

# Authentication Secrets (MUST CHANGE - Generate with: openssl rand -hex 32)
JWT_SECRET=CHANGE_THIS_64_CHAR_RANDOM_STRING_USE_OPENSSL_RAND
JWT_REFRESH_SECRET=CHANGE_THIS_ANOTHER_64_CHAR_RANDOM_STRING
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Payment Encryption (MUST CHANGE - Generate with: openssl rand -hex 32)
PAYMENT_ENCRYPTION_KEY=CHANGE_THIS_64_CHAR_HEX_STRING_FOR_PAYMENT_ENCRYPTION

# Application Settings
APP_NAME=PixEcom
APP_VERSION=1.1.0
NODE_ENV=production
DEV_MODE=false

# API Configuration (Update with your domain)
API_PORT=3001
API_URL=https://api.yourdomain.com

# Frontend Configuration (Update with your domain)
NEXT_PUBLIC_API_URL=https://api.yourdomain.com/api
NEXT_PUBLIC_APP_URL=https://app.yourdomain.com

# File Uploads
UPLOAD_DIR=/var/www/pixecom/uploads
MAX_FILE_SIZE=52428800

# Stripe Payment Gateway (Production Keys)
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STRIPE_WEBHOOK_SECRET
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY

# PayPal Payment Gateway (Production)
PAYPAL_CLIENT_ID=YOUR_PAYPAL_PRODUCTION_CLIENT_ID
PAYPAL_CLIENT_SECRET=YOUR_PAYPAL_PRODUCTION_SECRET
PAYPAL_WEBHOOK_ID=YOUR_PAYPAL_WEBHOOK_ID
PAYPAL_MODE=live

# Tazapay Payment Gateway
TAZAPAY_API_KEY=YOUR_TAZAPAY_API_KEY
TAZAPAY_API_SECRET=YOUR_TAZAPAY_SECRET

# Email Configuration (Optional - for sending order confirmations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
META_PIXEL_ID=

# Logging
LOG_LEVEL=info
LOG_DIR=/var/www/pixecom/logs
